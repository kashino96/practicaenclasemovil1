<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadPasarParametro">


    <EditText
        android:id="@+id/txtParametro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ingrese un dato" />

    <Button
        android:id="@+id/btnEnviarParametro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtParametro"
        android:layout_below="@+id/txtParametro"
        android:layout_marginStart="52dp"
        android:layout_marginTop="49dp"
        android:text="Enviar Parametro" />
</RelativeLayout>